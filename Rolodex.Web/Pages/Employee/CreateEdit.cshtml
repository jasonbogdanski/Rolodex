@page
@using Rolodex.Web.Infrastructure.Tags
@model Rolodex.Web.Pages.Employee.CreateEdit
@{
    ViewData["Title"] = Model.Data.Id == null ? "Create" : "Edit";
}

<h2>@(Model.Data.Id == null ? "Create" : "Edit")</h2>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @Html.HiddenFor(m => m.Data.Id)
            @Html.FormBlock(m => m.Data.FirstName)
            @Html.FormBlock(m => m.Data.LastName)
            @Html.FormBlock(m => m.Data.JobTitle)
            @Html.FormBlock(m => m.Data.Email)
            @Html.FormBlock(m => m.Data.CompanyBranch)
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> | <a asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
